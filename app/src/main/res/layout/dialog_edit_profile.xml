<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_layout"
    android:padding="10dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close_dialog"
            android:id="@+id/imageButtonCloseDialog"
            android:layout_gravity="right"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Writing  Fill this are with profile informaiton-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_layout"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:id="@+id/editTextDayOfMonth"
                        android:backgroundTint="#fff"
                        android:layout_weight="1"
                        android:hint="Gün"
                        android:layout_marginLeft="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="26dp"
                        android:text="/" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingBottom="10dp"
                        android:backgroundTint="#fff"
                        android:paddingTop="10dp"
                        android:id="@+id/editTextMonthOfYear"
                        android:paddingLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:hint="Ay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="26dp"
                        android:textColor="#000"
                        android:text="/" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="15dp"
                        android:backgroundTint="#fff"
                        android:id="@+id/editTextYear"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:hint="Yıl" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Doğum Tarihi"
                    android:textColor="#084a81" />

            </RelativeLayout>



            <!-- Job -->

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <!-- Writing  Fill this are with profile informaiton-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:paddingTop="15dp"
                    android:id="@+id/editTextJob"
                    android:paddingBottom="15dp"
                    android:background="@drawable/box_layout"
                    android:paddingLeft="15dp"
                    android:hint="İş" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="İş"
                    android:textColor="#084a81" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout3"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <!-- Writing  Fill this are with profile informaiton-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/editTextPet"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#000"
                    android:background="@drawable/box_layout"
                    android:paddingLeft="15dp"
                    android:hint="Evcil Hayvanlar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#084a81"
                    android:background="#ffffff"
                    android:text="Evcil Hayvan"/>

            </RelativeLayout>
            <!-- City / School
            It should be linear layout
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout4"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <!-- Writing  Fill this are with profile informaiton-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/editTextCitySchool"
                    android:textColor="#000"
                    android:background="@drawable/box_layout"
                    android:paddingLeft="15dp"
                    android:hint="Şehir/Okul"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#084a81"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:text="Şehir / Okul"/>

            </RelativeLayout>
            <!-- Hobbies or that kind of things -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <!-- Writing  Fill this are with profile informaiton-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingTop="15dp"
                    android:textColor="#000"
                    android:paddingBottom="15dp"
                    android:background="@drawable/box_layout"
                    android:id="@+id/editTextHobies"
                    android:paddingLeft="15dp"
                    android:hint="Hobiler"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:textColor="#084a81"
                    android:paddingRight="10dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:text="Hobiler"/>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="KAYDET"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:id="@+id/buttonSaveProfileInformations"
            android:textSize="18dp"/>

    </LinearLayout>

</ScrollView>